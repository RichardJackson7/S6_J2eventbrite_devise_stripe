<% if user_signed_in? %>
<h1>Create New Event </h1>

<h3> Fullfill the form </h3>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @event do |f| %>

      <%= f.label :description %>
      <%= f.text_field :description %> <br>

      <%= f.label :date %>
      <%= f.date_field :date %> <br>

      <%= f.label :place %>
      <%= f.text_field :place %> <br>

      <%= f.submit "Create a new event", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>

